<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xyz.xcye.file.dao.FileDao">

    <cache type="xyz.xcye.mybatis.MybatisCacheAutoConfig"/>

    <insert id="insertFile"
            parameterType="xyz.xcye.file.po.File"
    >
        INSERT INTO
            au_file
            (uid,create_time,file_name,size,summary,path,storage_mode,storage_path,is_delete)
        VALUES
            (#{file.uid},#{file.createTime},#{file.fileName},
            #{file.size},#{file.summary},#{file.path},#{file.storageMode},#{file.storagePath},#{file.delete})
    </insert>

    <!--
    修改au_file的时候，因为删除状态和size的值有默认值，所以就不适用if进行判断了
    不提供修改的字段有（因为没有意义）:createdAt,size,file_name,path
    -->
    <update id="updateFile"
            parameterType="xyz.xcye.file.po.File"
            keyColumn="uid"
    >
        update
            au_file
            <set>
                <if test="file.summary != null">
                    summary=#{file.summary},
                </if>
                <if test="file.delete != null">
                    is_delete=#{file.delete},
                </if>
                <if test="file.deleteTime != null">
                    delete_time=#{file.deleteTime}
                </if>
            </set>
            where
                uid=#{file.uid}
    </update>

    <delete id="deleteFile">
        delete from
            au_file
        where
            uid=#{file.uid}
    </delete>

    <select id="queryAll" resultMap="fileResult">
        select
            uid,create_time,file_name,`size`,summary,`path`,storage_mode,storage_path,is_delete,delete_time
        from
          au_file
        <where>
            <if test="condition.startTime != null and condition.endTime != null">
                and create_time between #{condition.startTime} and #{condition.endTime}
            </if>
            <if test="condition.uid != null">
                and uid=#{condition.uid}
            </if>
            <if test="condition.keyword != null">
                and file_name like concat('%', #{condition.keyword}, '%')
            </if>
            <if test="condition.status != null">
                and is_delete=#{condition.status}
            </if>
        </where>
    </select>

    <resultMap id="fileResult" type="xyz.xcye.file.po.File">
        <id column="uid" property="uid"/>
        <result column="create_time" property="createTime"/>
        <result column="file_name" property="fileName"/>
        <result column="size" property="size"/>
        <result column="summary" property="summary"/>
        <result column="path" property="path"/>
        <result column="is_delete" property="delete"/>
        <result column="delete_time" property="deleteTime"/>
    </resultMap>
</mapper>
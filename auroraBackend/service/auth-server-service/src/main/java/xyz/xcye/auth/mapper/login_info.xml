<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.xcye.auth.dao.AuroraLoginInfoDao">

    <resultMap id="loginInfoResultMap" type="xyz.xcye.auth.po.LoginInfo">
        <id column="uid" property="uid"/>
        <result column="username" property="username"/>
        <result column="login_location" property="loginLocation"/>
        <result column="login_ip" property="loginIp"/>
        <result column="operation_system_info" property="operationSystemInfo"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="status" property="status"/>
        <result column="message" property="message"/>
    </resultMap>

  	<sql id="Where_Condition">
        <where>
            <if test="uid != null">
                AND uid = #{uid}
            </if>
            <if test="username != null and username != '' ">
                AND username = #{username}
            </if>
            <if test="loginLocation != null and loginLocation != '' ">
                AND login_location = #{loginLocation}
            </if>
            <if test="loginIp != null and loginIp != '' ">
                AND login_ip = #{loginIp}
            </if>
            <if test="operationSystemInfo != null and operationSystemInfo != '' ">
                AND operation_system_info = #{operationSystemInfo}
            </if>
            <if test="createTime != null and createTime != '' ">
                AND create_time = #{createTime}
            </if>
            <if test="updateTime != null and updateTime != '' ">
                AND update_time = #{updateTime}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="message != null and message != '' ">
                AND message = #{message}
            </if>
        </where>
  	</sql>

    <sql id="Base_Column_List">
        uid,
        username,
        login_location,
        login_ip,
        operation_system_info,
        create_time,
        update_time,
        status,
        message
    </sql>

	<!-- common methods start -->
    <!-- 新增一条数据 -->
	<insert id="insert" parameterType="xyz.xcye.auth.po.LoginInfo" useGeneratedKeys="true" keyProperty="uid">
        INSERT INTO au_login_info (
            <trim suffixOverrides=",">
                <if test="uid != null">
                    uid,
                </if>
                <if test="username != null and username != '' ">
                    username,
                </if>
                <if test="loginLocation != null and loginLocation != '' ">
                    login_location,
                </if>
                <if test="loginIp != null and loginIp != '' ">
                    login_ip,
                </if>
                <if test="operationSystemInfo != null and operationSystemInfo != '' ">
                    operation_system_info,
                </if>
                <if test="createTime != null and createTime != '' ">
                    create_time,
                </if>
                <if test="updateTime != null and updateTime != '' ">
                    update_time,
                </if>
                <if test="status != null">
                    status,
                </if>
                <if test="message != null and message != '' ">
                    message,
                </if>
            </trim>
        ) VALUES (
            <trim suffixOverrides=",">
                <if test="uid != null">
                 #{uid},
                </if>
                <if test="username != null and username != '' ">
                 #{username},
                </if>
                <if test="loginLocation != null and loginLocation != '' ">
                 #{loginLocation},
                </if>
                <if test="loginIp != null and loginIp != '' ">
                 #{loginIp},
                </if>
                <if test="operationSystemInfo != null and operationSystemInfo != '' ">
                 #{operationSystemInfo},
                </if>
                <if test="createTime != null and createTime != '' ">
                 #{createTime},
                </if>
                <if test="updateTime != null and updateTime != '' ">
                 #{updateTime},
                </if>
                <if test="status != null">
                 #{status},
                </if>
                <if test="message != null and message != '' ">
                 #{message},
                </if>
            </trim>
        )
	</insert>

    <!-- 通过主键删除数据 -->
	<delete id="deleteById" parameterType="Long">
        DELETE FROM au_login_info
        WHERE uid = #{uid} 
	</delete>

    <!-- 根据传入参数删除数据 -->
	<delete id="deleteByWhere" parameterType="xyz.xcye.auth.po.LoginInfo">
        DELETE FROM au_login_info
        <include refid="Where_Condition" />
	</delete>

    <!-- 根据id更新数据 -->
    <update id="updateById" parameterType="xyz.xcye.auth.po.LoginInfo">
		UPDATE au_login_info
		<set>
			<if test="username != null and username != '' ">username = #{username},</if>
			<if test="loginLocation != null and loginLocation != '' ">login_location = #{loginLocation},</if>
			<if test="loginIp != null and loginIp != '' ">login_ip = #{loginIp},</if>
			<if test="operationSystemInfo != null and operationSystemInfo != '' ">operation_system_info = #{operationSystemInfo},</if>
			<if test="updateTime != null and updateTime != '' ">update_time = #{updateTime},</if>
			<if test="status != null">status = #{status},</if>
			<if test="message != null and message != '' ">message = #{message},</if>
		</set>
		WHERE
		    uid = #{uid}
	</update>

	<!-- 根据主键查询数据  -->
	<select id="queryById" resultMap="loginInfoResultMap" parameterType="Long">
        SELECT
        <include refid="Base_Column_List" />
  	    FROM au_login_info
        WHERE
            uid = #{uid}
    </select>

    <!-- 查询一条记录  -->
	<select id="queryOne" resultMap="loginInfoResultMap" parameterType="xyz.xcye.auth.po.LoginInfo">
         SELECT
         <include refid="Base_Column_List" />
  	     FROM au_login_info
         <include refid="Where_Condition" />
         LIMIT 1
    </select>

	<!-- 根据传入参数查询数据列表  -->
	<select id="queryListByWhere" resultMap="loginInfoResultMap" parameterType="xyz.xcye.auth.po.LoginInfo">
        SELECT
        <include refid="Base_Column_List" />
        FROM au_login_info
        <include refid="Where_Condition" />
    </select>

	<!-- 统计符合条件的数据数量 -->
	<select id="countByWhere" resultType="int" parameterType="xyz.xcye.auth.po.LoginInfo">
		SELECT COUNT(*) FROM au_login_info
		<include refid="Where_Condition" />
	</select>

    <!-- 批量插入多条数据 -->
	<insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO au_login_info (
        	<include refid="Base_Column_List" />
        ) VALUES
        <foreach collection="list" item="item" index= "index" separator =",">
            (
            <trim suffixOverrides=",">
				#{item.uid},
				#{item.username},
				#{item.loginLocation},
				#{item.loginIp},
				#{item.operationSystemInfo},
				#{item.createTime},
				#{item.updateTime},
				#{item.status},
				#{item.message},
            </trim>
            )
        </foreach>
    </insert>
	<!-- common methods end -->

	<!-- 下面的是兼容旧版本 -->
	<select id="queryListByCondition" resultMap="loginInfoResultMap">
		select
		<include refid="Base_Column_List" />
		from au_login_info
        <where>
            <if test="condition.uid != null">
                and uid=#{condition.uid}
            </if>
            <if test="condition.keyword != null">
                and username=#{condition.keyword}
            </if>
            <if test="condition.startTime != null and condition.endTime != null">
                and create_time between #{condition.startTime} and #{condition.endTime}
            </if>
            <if test="condition.status != null">
                and status=#{condition.status,jdbcType=BOOLEAN}
            </if>
        </where>
	</select>
</mapper>